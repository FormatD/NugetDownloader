@model NupkgDownloader.Web.Areas.Template.Models.Question

<li>
    <a href="/template/user/home" class="fly-avatar">
        <img src="https://tva1.sinaimg.cn/crop.0.0.118.118.180/5db11ff4gw1e77d3nqrv8j203b03cweg.jpg" alt="@Model.Creator.Name">
    </a>
    <h2>
        <a class="layui-badge">@Model.Tag</a>
        <a href="template/jie/detail/@Model.Id">@Model.Subject</a>
    </h2>
    <div class="fly-list-info">
        <a href="/template/user/home" link>
            <cite>@Model.Creator.Name</cite>
            @if (Model.Creator.IsVip)
            {
                <i class="iconfont icon-renzheng" title="认证信息：XXX"></i>
                                        <i class="layui-badge fly-badge-vip">VIP@(Model.Creator.VipLevel)</i>
            }
        </a>
        <span>刚刚</span>
        <span class="fly-list-kiss layui-hide-xs" title="悬赏飞吻"><i class="iconfont icon-kiss"></i> 60</span>
        @if (Model.IsFinished)
        {
            <span class="layui-badge fly-badge-accept layui-hide-xs">已结</span>
        }
        <span class="fly-list-nums">
            <i class="iconfont icon-pinglun1" title="回答"></i> @Model.CommentCount
        </span>
    </div>
    <div class="fly-list-badge">
        <!--
        <span class="layui-badge layui-bg-black">置顶</span>
        <span class="layui-badge layui-bg-red">精帖</span>
        -->
    </div>
</li>